  style.
    html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}

body.w3-light-grey
  // Top container
  .w3-bar.w3-top.w3-blue.w3-large(style='z-index:4')
    button.w3-bar-item.w3-button.w3-hide-large.w3-hover-none.w3-hover-text-light-grey(onclick='w3_open();')
      i.fa.fa-bars
      |   Menu
    a.w3-bar-item.w3-right.w3-blue.w3-padding(href='/home') 
      img(src="/favicon.ico")
      |   Choral Cloud
      
  // epoch js makes all the charts have a z-index of 999 or 1000 we want the
  // menu to be above that
  div(style="z-index=1001")
    if googleUser
      +menu(googleUser)
  .w3-main(style='margin-left:300px;margin-top:55px;margin-bottom:75px;')
    .w3-container
      if flash.info
        div.flash.bg-info= flash.info
      if flash.success
        div.flash.bg-success= flash.success
      if flash.error
        div.flash.bg-danger= flash.error
      block content

  // Footer
  footer.footer.navbar-fixed-bottom.center.w3-light-gray(style='z-index:2')
    br
    p
      |  Powered by Choral Cloud  
      a(href='https://github.com/ChoralCloud', target='_blank')
        i.fa.fa-github.fa-2

